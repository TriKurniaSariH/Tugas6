<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastelPink">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp" />

    <!-- Konten utama dibungkus biar rapi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/imgIconPswd"
            android:layout_width="275dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_pswd" />

        <TextView
            android:id="@+id/txtInstruction"
            android:layout_width="251dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Please Enter Your Email or Phone Number To Receive a Verification Code"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etEmailOrPhone"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Email or Phone"
            android:inputType="textEmailAddress|phone"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Send"
            android:textColor="@color/white"
            android:backgroundTint="@color/darkPink"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/txtRememberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember your password? Log In"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
