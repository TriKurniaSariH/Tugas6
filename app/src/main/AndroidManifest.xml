<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tugas2"
        tools:targetApi="31">
        <activity
            android:name=".FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="false" /> <!-- Main Activity (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" /> <!-- Forgot Password Activity -->
        <activity
            android:name=".ForgotPwdActivity"
            android:exported="true" /> <!-- Tugas Activity -->
        <activity
            android:name=".TugasActivity"
            android:exported="false" /> <!-- List Anime Activity -->
        <activity
            android:name=".ListAnimeActivity"
            android:exported="false" /> <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" /> <!-- Share Message Activity -->
        <activity
            android:name=".ShareMessageActivity"
            android:exported="false" /> <!-- Anime Detail Activity -->
        <activity
            android:name=".AnimeDetailActivity"
            android:exported="false" />
    </application>

</manifest>